{
    "name": "tonis-io/tonis",
    "authors": [
        {
            "name": "Kyle Spraggs",
            "email": "theman@spiffyjr.me"
        }
    ],
    "description": "Tonis is a middleware framework built on top of Stratigility.",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=5.5",
        "container-interop/container-interop": "^1.1",
        "filp/whoops": "^1.1",
        "nikic/fast-route": "^0.6",
        "league/container": "^1.3",
        "league/plates": "^3.0",
        "relay/relay": "^0.2",
        "zendframework/zend-diactoros": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "scrutinizer/ocular": "^1.1.1",
        "squizlabs/php_codesniffer": "^2.0",
        "twig/twig": "^1.18",
        "zendframework/zend-diactoros": "^1.0"
    },
    "suggest": {
        "twig/twig": "to use the Twig templating engine"
    },
    "autoload": {
        "psr-4": {
            "Tonis\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tonis\\": [
                "test/"
            ]
        }
    },
    "bin": [
        "bin/tonis.php",
        "bin/tonis"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
